<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AllBlueLogin">
        <item name="android:textColor">@color/PureWhite</item>
        <item name="android:textColorHint">@color/DarkWhite</item>
        <item name="colorControlNormal">@color/DarkWhite</item>
        <item name="colorControlActivated">@color/PureWhite</item>
    </style>

    <style name="AllWriteLoginText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/LoginTextColor</item>
        <item name="android:textColorHint">@color/LoginTextColor</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:fontFamily">@font/fangzheng</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="MainTextstyle">
        <item name="android:textColor">@color/PureWhite</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="MainTextstyleWhite">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toolbar_while_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/PureWhite</item>
    </style>

    <style name="register">
        <item name="android:textColor">#ff484848</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="page_title">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/fangzheng</item>
        <item name="android:color">#494949</item>
    </style>

    <style name="homepage_button">
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:height">100dp</item>
    </style>

    <style name="homepage_button_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0F6E76</item>
        <item name="android:fontFamily">@font/fangzheng</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="watcher">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/fangzheng</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
